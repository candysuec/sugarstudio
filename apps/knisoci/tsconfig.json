{
  "extends": "../../packages/config/tsconfig/base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "ui": [
        "../../packages/ui/index.tsx"
      ],
      "supabase-client": [
        "../../packages/supabase-client/src/index.ts"
      ],
      "@sugarstudio/ui": [
        "../../packages/ui/index.tsx"
      ],
      "@sugarstudio/supabase-client": [
        "../../packages/supabase-client/src/index.ts"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../../packages/ui"
    }
  ]
}
